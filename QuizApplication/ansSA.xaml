<Window x:Class="QuizApplication.ansSA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ansSA" Height="300" Width="300">
    <Grid>
        <Label x:Name="lblQuestion" Content="Question?" HorizontalAlignment="Left" Margin="27,40,0,0" VerticalAlignment="Top"/>
        <Label Content="Short Answer:" HorizontalAlignment="Left" Margin="27,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.841,0.663"/>
        <TextBox x:Name="txtSA" HorizontalAlignment="Left" Height="23" Margin="27,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231"/>
        <Label Content="Progress:" HorizontalAlignment="Left" Margin="27,213,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSubmit" Content="Answer" HorizontalAlignment="Left" Margin="183,219,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.106,0.574" Click="btnSubmit_Click"/>
        <Label x:Name="lblProgress" Content="%prog" HorizontalAlignment="Left" Margin="85,213,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.881,0.445"/>
        <Label x:Name="lblQuestionNum" Content="q." HorizontalAlignment="Left" Margin="27,14,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblError" Content="" HorizontalAlignment="Left" Margin="144,188,0,0" VerticalAlignment="Top" Width="114"/>

    </Grid>
</Window>
